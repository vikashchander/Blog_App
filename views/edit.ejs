<% include partials/header %>
<div id="form" class="ui main text container segment">
    <div class="ui huge header">
        <h3>Edit <%=getBlog.title %> Post</h3>
        <form class="ui form" action="/blogs/<%= getBlog._id %>?_method=PUT" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="getBlog[title]" value="<%=getBlog.title%>">
            </div>
            <div class="field">
                <label>Image</label>
                <input type="text" name="getBlog[img]" value="<%=getBlog.img%>">
            </div>
            <div class="field">
                <label>Description</label>
                <textarea name="getBlog[description]"><%=getBlog.description%></textarea>
            </div>
            <button class="ui inverted primary button">Update</button>
        </form>
    </div>
</div>
<% include partials/footer %>